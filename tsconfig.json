{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [] // Important for telling TypeScript to not include types from @types packages during type-checking (since bun types are included here)
  },
  "include": [
    "src/frontend/**/*.vue",
    "src/frontend/**/*.ts",
    "src/frontend/**/*.d.ts",
    "src/frontend/**/*.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
